<Window x:Class="CarDealership.VehicleParts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VehicleParts" Height="400" Width="600">
    <Grid>
        <Label Content="VIN" Height="25" HorizontalAlignment="Left" Margin="270,300,0,0" Name="label3" VerticalAlignment="Top" />
        <Button Content="Search" Height="25" HorizontalAlignment="Left" Margin="400,325,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <TextBlock Height="35" Margin="10,5,8,0" Name="StatementBlock" Text="Enter the VIN of a Specific Vehicle" VerticalAlignment="Top" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="270,325,0,0" Name="Parameter1" VerticalAlignment="Top" Width="113" />
        <DataGrid HorizontalAlignment="Left" Margin="10,40,0,81" Name="ResponseBlock1" Width="Auto" ItemsSource ="{Binding}" CanUserAddRows="False" />
        <Button Content="Exit" Height="25" HorizontalAlignment="Right" Margin="0,325,20,0" Name="QuitButton" VerticalAlignment="Top" Width="75" Click="QuitButton_Click" />
        <Button Content="Clear" Height="23" HorizontalAlignment="Right" Margin="0,10,20,0" Name="ClearButton" VerticalAlignment="Top" Width="75" Click="ClearButton_Click" />
    </Grid>
</Window>
