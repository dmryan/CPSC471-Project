        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory" Height="300" Width="350">
    <Grid>
        <Button Content="View Cars" Height="25" HorizontalAlignment="Left" Margin="241,224,0,0" Name="ViewCars" VerticalAlignment="Top" Width="75" Click="ViewCars_Click" />
        <Button Content="View Trucks" Height="25" HorizontalAlignment="Left" Margin="156,224,0,0" Name="ViewTrucks" VerticalAlignment="Top" Width="75" Click="ViewTrucks_Click" />
        <DataGrid Height="Auto" HorizontalAlignment="Left" Name="InventoryGrid" VerticalAlignment="Top" Width="Auto" ItemsSource ="{Binding}"/>
    </Grid>
</Window>
